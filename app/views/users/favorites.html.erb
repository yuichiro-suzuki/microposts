<h1>Favorites (<%= @user.favorites.count %>)</h1>

<% if @favorites.any? %>
  <% @favorites.each do |favorite| %>
    <ul id="favorite-<%= favorite.id %>">
     <%= link_to gravatar_for(favorite.user, size: 60), favorite.user %>
     <ol class="user"><%= link_to favorite.user.name, favorite.user %></ol>
     <ol class="content"><%= favorite.content %></ol>
     <ol class="timestamp">
        Posted <%= time_ago_in_words(favorite.created_at) %> ago.
        <% if current_user == favorite.user %></ol>
    <% end %>
    <br><br>
    </ul>
  <% end %>
<% end %>